---
layout: base.njk
---

<article>
  <header>
    <div class="project-meta">
      {% if repo %}<p class="project-repo"><a href="{{ repo }}" target="_blank">View on GitHub</a></p>{% endif %}
      {% if demo %}<p class="project-demo"><a href="{{ demo }}" target="_blank">Live Demo</a></p>{% endif %}
      {% if status %}<p class="project-status">Status: <span class="status-{{ status | lower | replace(' ', '-') }}">{{ status }}</span></p>{% endif %}
    </div>
  </header>
  {{ content | safe }}
</article>

<div class="project-nav">
  <a href="/projects/">&larr; Back to all projects</a>
</div> 